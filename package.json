{
  "name": "hdrezka-lampa-plugin",
  "version": "1.0.0",
  "description": "HDRezka plugin for Lampa media player",
  "main": "hdrezka_plugin.js",
  "scripts": {
    "build": "echo 'Building plugin...'",
    "test": "echo 'No tests specified'",
    "install": "echo 'Installing to Lampa...'",
    "dev": "echo 'Development mode'"
  },
  "keywords": [
    "lampa",
    "plugin",
    "hdrezka",
    "video",
    "streaming",
    "parser"
  ],
  "author": "HDRezka Parser Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/hdrezka-lampa-plugin.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/hdrezka-lampa-plugin/issues"
  },
  "homepage": "https://github.com/your-username/hdrezka-lampa-plugin#readme",
  "dependencies": {},
  "devDependencies": {},
  "lampa": {
    "minVersion": "1.5.0",
    "maxVersion": "*",
    "type": "online-source",
    "categories": ["movies", "tv-series"],
    "languages": ["ru", "en"],
    "regions": ["RU", "UA", "BY", "KZ"]
  },
  "config": {
    "default_quality": "720p",
    "cache_size": 100,
    "cache_time": 3600,
    "request_timeout": 15000,
    "max_retries": 3,
    "retry_delay": 1000
  }
